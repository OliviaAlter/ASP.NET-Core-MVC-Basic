@model ASP.NET_Core_MVC_Basic.Models.CategoryModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add category</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DisplayOrder"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DisplayOrder" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Create"/>
                    </div>
                    <div class="col">
                        <a asp-controller="Home" asp-action="Index" class ="btn btn-success w-75">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>