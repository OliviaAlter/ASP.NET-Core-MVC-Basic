@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Category";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>
    <br/>
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.CategoryName</td>
                    <td width="40%">@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-id ="@obj.CategoryId" asp-action="EditCategory" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Category" asp-route-id="@obj.CategoryId" asp-action="DeleteCategory" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exist</p>
    }
</div>